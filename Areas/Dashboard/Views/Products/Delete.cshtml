@model ECommerce.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container my-5">
    <h1 class="text-center m-4">Delete Product</h1>
    <div class="p-4 shadow rounded bg-light mx-auto" style="max-width: 600px;">
        <h3 class="text-center mb-4">Are you sure you want to delete this product?</h3>

        <h4 class="mb-3">Product Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">Product Name</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-4">Description</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>

            <dt class="col-sm-4">Category</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Category)</dd>

            <dt class="col-sm-4">Price</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Price)</dd>

            <dt class="col-sm-4">Stock Quantity</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.StockQuantity)</dd>

            <dt class="col-sm-4">Image URL</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Image)</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group text-center">
                <button type="submit" class="btn btn-danger btn-lg">Delete</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg ml-2">Back to List</a>
            </div>
        </form>
    </div>
</div>

