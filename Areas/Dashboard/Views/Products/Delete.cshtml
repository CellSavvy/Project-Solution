@using ECommerce.Models
@model Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container my-5">
    <h1 class="text-center mb-3 text-danger">Delete Product</h1>
    <h4 class="text-center text-muted mb-4">Are you sure you want to delete this product?</h4>

    <div class="card shadow p-4 mx-auto bg-light" style="max-width: 700px;">
        <div class="row mb-3">
            <div class="col-sm-4 font-weight-bold">Product Name:</div>
            <div class="col-sm-8">@Model.Name</div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-4 font-weight-bold">Price:</div>
            <div class="col-sm-8">$@Model.Price</div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-4 font-weight-bold">Description:</div>
            <div class="col-sm-8">@Model.Description</div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-4 font-weight-bold">Stock Quantity:</div>
            <div class="col-sm-8">@Model.StockQuantity</div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-4 font-weight-bold">Category:</div>
            <div class="col-sm-8">@Model.Category</div>
        </div>

        <div class="row mb-4">
            <div class="col-sm-4 font-weight-bold">Image:</div>
            <div class="col-sm-8">
                <img src="@Model.ImageUrl" alt="Product Image" class="img-thumbnail shadow-sm" style="max-width: 200px;" />
            </div>
        </div>

        <form asp-action="Delete" method="post" class="text-center">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger btn-lg mx-2">Delete</button>
            <a asp-action="Index" class="btn btn-secondary btn-lg mx-2">Cancel</a>
        </form>
    </div>
</div>
