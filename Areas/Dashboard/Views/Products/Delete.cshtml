@model DEPI_Graduation_Project.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<div class="p-3">
    <h1>Delete Product</h1>
    <hr />
    <form asp-action="Delete" method="post" class="p-5 shadow rounded bg-light">
        <div class="form-group">
            <label asp-for="Name" class="control-label">Product Name</label>
            <input asp-for="Name" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label">Description</label>
            <textarea asp-for="Description" class="form-control" readonly rows="4"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="Category" class="control-label">Category</label>
            <input asp-for="Category" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label asp-for="Price" class="control-label">Price</label>
            <input asp-for="Price" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label asp-for="StockQuantity" class="control-label">Stock Quantity</label>
            <input asp-for="StockQuantity" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label asp-for="Image" class="control-label">Image URL</label>
            <input asp-for="Image" class="form-control" readonly />
        </div>

        <div class="fst-italic m-3">
            <span>Are you sure you want to delete this?</span>
        </div>

        <div class="form-group text-center">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger btn-lg">Delete</button>
            <a asp-action="Index" class="btn btn-secondary btn-lg ml-2">Back to List</a>
        </div>
    </form>
</div>
